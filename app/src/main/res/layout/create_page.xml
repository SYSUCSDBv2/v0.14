<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="false"
        android:theme="?attr/actionBarPopupTheme"
        app:expanded="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/button_confirm"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:background="#555fc2"
            android:elevation="0dp"
            android:text="确定"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />


    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="373dp"
        android:layout_marginTop="24dp"
        android:background="@color/cardview_shadow_end_color"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/cardview_light_background"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/text_title"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" 标题"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edit_title"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:text="在此输入标题"
                android:textAlignment="textEnd"
                android:textColor="@android:color/darker_gray"
                tools:layout_editor_absoluteX="359dp"
                tools:layout_editor_absoluteY="29dp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/cardview_light_background"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/text_date_selecter"
                android:layout_width="139dp"
                android:layout_height="47dp"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_weight="1"
                android:text=" 日期"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_date_selecter"
                android:layout_width="215dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_weight="1"
                android:background="@color/cardview_shadow_end_color"
                android:text="Date"
                android:textAlignment="textEnd"
                android:textColor="@android:color/darker_gray" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/cardview_light_background"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/text_time_selecter"
                android:layout_width="139dp"
                android:layout_height="43dp"
                android:layout_column="0"
                android:layout_row="2"
                android:layout_weight="1"
                android:text=" 时间"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_time_selecter"
                android:layout_width="214dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="2"
                android:layout_weight="1"
                android:background="@color/cardview_shadow_end_color"
                android:text="Time"
                android:textAlignment="textEnd"
                android:textColor="@android:color/darker_gray" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/cardview_light_background"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/text_alarm"
                android:layout_width="139dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="3"
                android:layout_weight="1"
                android:text=" 提醒"
                android:textSize="18sp" />

            <Switch
                android:id="@+id/switch_alarm"
                android:layout_width="203dp"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_row="3"
                android:layout_weight="1"
                android:text="开/关 "
                android:textAlignment="textEnd"
                android:textColor="@android:color/darker_gray" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cardview_light_background"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/text_note"
                android:layout_width="139dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="4"
                android:layout_weight="1"
                android:text=" 备注"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edit_note"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_row="4"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textMultiLine"
                android:selectAllOnFocus="true"
                android:text="在此输入备注"
                android:textAlignment="textEnd"
                android:textColor="@android:color/darker_gray" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>